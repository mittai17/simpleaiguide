---
const { url, title } = Astro.props;
const encodedUrl = encodeURIComponent(url);
const encodedTitle = encodeURIComponent(title);
---

<!-- Smart Dock Container -->
<div
    id="smart-dock"
    class="fixed bottom-6 left-1/2 -translate-x-1/2 z-50 transition-all duration-300 transform translate-y-0"
>
    <!-- Main Glass Capsule -->
    <div
        class="flex items-center gap-1.5 p-2 bg-white/80 backdrop-blur-xl border border-white/60 rounded-full shadow-[0_8px_30px_rgb(0,0,0,0.12)] hover:shadow-[0_8px_40px_rgb(0,0,0,0.2)] ring-1 ring-slate-900/5 group/dock"
    >
        <!-- Home / Scroll Top -->
        <button
            id="scroll-top-btn"
            class="p-2.5 rounded-full text-slate-500 hover:text-indigo-600 hover:bg-indigo-50 transition-all active:scale-95"
            aria-label="Scroll to Top"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke="currentColor"
                class="w-5 h-5"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M4.5 15.75l7.5-7.5 7.5 7.5"></path>
            </svg>
        </button>

        <div class="w-px h-6 bg-slate-300/50 mx-0.5"></div>

        <!-- Text Size Toggle -->
        <button
            id="text-size-btn"
            class="p-2.5 rounded-full text-slate-500 hover:text-indigo-600 hover:bg-indigo-50 transition-all active:scale-95 relative group"
            aria-label="Toggle Text Size"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke="currentColor"
                class="w-5 h-5"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25"
                ></path>
            </svg>
            <!-- Overlaid Text AA icon concept or just use Font icon -->
            <span
                class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 text-[10px] font-bold mt-[1px]"
                >Aa</span
            >
        </button>

        <!-- Like Button -->
        <button
            id="like-btn"
            class="p-2.5 rounded-full text-slate-400 hover:text-pink-500 hover:bg-pink-50 transition-all active:scale-95 relative group"
            aria-label="Like Post"
        >
            <svg
                id="heart-icon"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke="currentColor"
                class="w-5 h-5 transition-transform duration-300 group-hover:scale-110"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z"
                ></path>
            </svg>
            <svg
                id="heart-filled"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
                class="w-5 h-5 text-pink-500 hidden absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2"
            >
                <path
                    d="M11.645 20.91l-.007-.003-.022-.012a15.247 15.247 0 01-.383-.218 25.18 25.18 0 01-4.244-3.17C4.688 15.36 2.25 12.174 2.25 8.25 2.25 5.322 4.714 3 7.688 3A5.5 5.5 0 0112 5.052 5.5 5.5 0 0116.313 3c2.973 0 5.437 2.322 5.437 5.25 0 3.925-2.438 7.111-4.739 9.256a25.175 25.175 0 01-4.244 3.17 15.247 15.247 0 01-.383.219l-.022.012-.007.004-.003.001a.752.752 0 01-.704 0l-.003-.001z"
                ></path>
            </svg>
        </button>

        <div class="w-px h-6 bg-slate-300/50 mx-0.5"></div>

        <!-- Share Actions (Collapsed on Mobile?) -->
        <div class="flex items-center gap-1">
            <!-- Twitter -->
            <a
                href={`https://twitter.com/intent/tweet?text=${encodedTitle}&url=${encodedUrl}`}
                target="_blank"
                rel="noopener noreferrer"
                class="p-2.5 rounded-full text-slate-400 hover:text-white hover:bg-[#1DA1F2] transition-colors"
                aria-label="Share on Twitter"
            >
                <svg fill="currentColor" viewBox="0 0 24 24" class="w-4 h-4">
                    <path
                        d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"
                    ></path>
                </svg>
            </a>

            <!-- Copy Link -->
            <button
                id="copy-link-btn"
                class="p-2.5 rounded-full text-slate-400 hover:text-white hover:bg-slate-700 transition-colors relative"
                aria-label="Copy Link"
            >
                <svg
                    id="link-icon"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="2"
                    stroke="currentColor"
                    class="w-4 h-4"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M13.19 8.688a4.5 4.5 0 011.242 7.244l-4.5 4.5a4.5 4.5 0 01-6.364-6.364l1.757-1.757m13.35-.622l1.757-1.757a4.5 4.5 0 00-6.364-6.364l-4.5 4.5a4.5 4.5 0 001.242 7.244"
                    ></path>
                </svg>
                <svg
                    id="check-icon"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="2"
                    stroke="currentColor"
                    class="w-4 h-4 hidden text-green-400"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M4.5 12.75l6 6 9-13.5"></path>
                </svg>
            </button>
        </div>
    </div>
</div>

<script>
    // --- Auto-Hide Logic ---
    const dock = document.getElementById("smart-dock");
    let lastScrollY = window.scrollY;
    let isHidden = false;

    window.addEventListener(
        "scroll",
        () => {
            const currentScrollY = window.scrollY;

            // Hide on scroll down (if moved more than 10px and not at top)
            if (currentScrollY > lastScrollY + 10 && currentScrollY > 100) {
                if (!isHidden) {
                    dock?.classList.add("translate-y-[200%]");
                    isHidden = true;
                }
            }
            // Show on scroll up
            else if (currentScrollY < lastScrollY - 5) {
                if (isHidden) {
                    dock?.classList.remove("translate-y-[200%]");
                    isHidden = false;
                }
            }
            lastScrollY = currentScrollY;
        },
        { passive: true },
    );

    // --- Scroll to Top ---
    document.getElementById("scroll-top-btn")?.addEventListener("click", () => {
        window.scrollTo({ top: 0, behavior: "smooth" });
    });

    // --- Text Size Toggle ---
    const textSizeBtn = document.getElementById("text-size-btn");
    const htmlRoot = document.documentElement;

    // Check local storage
    if (localStorage.getItem("user-text-size") === "large") {
        htmlRoot.classList.add("text-lg-mode");
        textSizeBtn?.classList.add("text-indigo-600", "bg-indigo-50");
    }

    textSizeBtn?.addEventListener("click", () => {
        const isLarge = htmlRoot.classList.toggle("text-lg-mode");
        if (isLarge) {
            localStorage.setItem("user-text-size", "large");
            textSizeBtn.classList.add("text-indigo-600", "bg-indigo-50");
        } else {
            localStorage.removeItem("user-text-size");
            textSizeBtn.classList.remove("text-indigo-600", "bg-indigo-50");
        }
    });

    // --- Like Button Logic ---
    const likeBtn = document.getElementById("like-btn");
    const heartIcon = document.getElementById("heart-icon");
    const heartFilled = document.getElementById("heart-filled");
    const pageKey = `liked-${window.location.pathname}`;

    // Load state
    if (localStorage.getItem(pageKey)) {
        heartIcon?.classList.add("hidden");
        heartFilled?.classList.remove("hidden");
        likeBtn?.classList.add("text-pink-500", "bg-pink-50");
    }

    likeBtn?.addEventListener("click", () => {
        // Toggle Like
        const isLiked = !localStorage.getItem(pageKey);

        if (isLiked) {
            localStorage.setItem(pageKey, "true");
            heartIcon?.classList.add("hidden");
            heartFilled?.classList.remove("hidden");
            likeBtn.classList.add("text-pink-500", "bg-pink-50");

            // Tiny confetti/pop effect could go here
            likeBtn.animate(
                [
                    { transform: "scale(1)" },
                    { transform: "scale(1.4)" },
                    { transform: "scale(1)" },
                ],
                { duration: 300 },
            );
        } else {
            localStorage.removeItem(pageKey);
            heartIcon?.classList.remove("hidden");
            heartFilled?.classList.add("hidden");
            likeBtn.classList.remove("text-pink-500", "bg-pink-50");
        }
    });

    // --- Copy Link ---
    const copyBtn = document.getElementById("copy-link-btn");
    const linkIcon = document.getElementById("link-icon");
    const checkIcon = document.getElementById("check-icon");

    copyBtn?.addEventListener("click", async () => {
        try {
            await navigator.clipboard.writeText(window.location.href);

            linkIcon?.classList.add("hidden");
            checkIcon?.classList.remove("hidden");

            setTimeout(() => {
                linkIcon?.classList.remove("hidden");
                checkIcon?.classList.add("hidden");
            }, 2000);
        } catch (err) {
            console.error("Failed to copy");
        }
    });
</script>

<style is:global>
    /* Text Size Mode Styles */
    html.text-lg-mode .prose {
        font-size: 1.15rem; /* ~18-19px */
        line-height: 1.8;
    }
    html.text-lg-mode .prose h1 {
        font-size: 2.5em;
    }
    html.text-lg-mode .prose h2 {
        font-size: 1.8em;
    }
    html.text-lg-mode .prose p {
        margin-bottom: 1.5em;
    }
</style>
