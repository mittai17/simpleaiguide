---
interface Props {
    headings: { depth: number; slug: string; text: string }[];
}

const { headings } = Astro.props;

// Filter only h2 and h3
const toc = headings.filter((h) => h.depth >= 2 && h.depth <= 3);
---

{
    toc.length > 0 && (
        <nav class="sticky top-24 hidden xl:block w-64 flex-shrink-0 pl-8 border-l border-slate-200 self-start max-h-[calc(100vh-6rem)] overflow-y-auto">
            <h3 class="font-bold text-slate-900 mb-4 text-sm uppercase tracking-wider">
                On this page
            </h3>
            <ul class="space-y-2 text-sm">
                {toc.map((heading) => (
                    <li class={`${heading.depth === 3 ? "pl-4" : ""}`}>
                        <a
                            href={`#${heading.slug}`}
                            class="block text-slate-500 hover:text-indigo-600 transition-colors border-l-2 border-transparent hover:border-indigo-600 pl-3 -ml-[17px] py-1"
                        >
                            {heading.text}
                        </a>
                    </li>
                ))}
            </ul>
        </nav>
    )
}
