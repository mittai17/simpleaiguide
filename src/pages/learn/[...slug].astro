---
import Layout from "../../components/Layout.astro";
import LearnSidebar from "../../components/LearnSidebar.astro";
import TableOfContents from "../../components/TableOfContents.astro";
import MCQ from "../../components/MCQ.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
    const posts = await getCollection("learn");
    return posts.map((post: any) => ({
        params: { slug: post.slug },
        props: { post },
    }));
}

const { post } = Astro.props;
const { Content, headings } = await post.render();

const allPosts = await getCollection("learn");
const currentCategoryPosts = allPosts
    .filter((p: any) => p.data.category === post.data.category)
    .sort((a: any, b: any) => a.data.order - b.data.order);

const currentIndex = currentCategoryPosts.findIndex(
    (p: any) => p.slug === post.slug,
);
const prevPost =
    currentIndex > 0 ? currentCategoryPosts[currentIndex - 1] : null;
const nextPost =
    currentIndex < currentCategoryPosts.length - 1
        ? currentCategoryPosts[currentIndex + 1]
        : null;
---

<Layout title={`${post.data.title} - Learn AI`}>
    <div class="container mx-auto px-4 py-8">
        <div class="flex flex-col lg:flex-row gap-8">
            <!-- Sidebar (Desktop: Left, Mobile: Hidden/Drawer) -->
            <aside class="hidden lg:block w-64 flex-shrink-0">
                <div class="sticky top-24">
                    <LearnSidebar
                        activeSlug={post.slug}
                        activeCategory={post.data.category}
                    />
                </div>
            </aside>

            <!-- Main Content -->
            <main class="flex-grow min-w-0">
                <article
                    class="prose prose-lg prose-slate max-w-none prose-pre:bg-slate-900 prose-pre:rounded-xl prose-pre:shadow-lg"
                >
                    <span
                        class="text-indigo-600 font-bold tracking-wider uppercase text-sm"
                    >
                        {post.data.category.replace("-", " ")}
                    </span>
                    <h1
                        class="text-4xl font-extrabold text-slate-900 mt-2 mb-8"
                    >
                        {post.data.title}
                    </h1>

                    <Content components={{ MCQ }} />
                </article>

                <!-- Next/Prev Navigation -->
                <div
                    class="mt-12 pt-8 border-t border-slate-100 flex flex-col sm:flex-row justify-between gap-4"
                >
                    {
                        prevPost ? (
                            <a
                                href={`/learn/${prevPost.slug}`}
                                class="flex-1 p-4 rounded-xl border border-slate-200 hover:border-indigo-300 hover:bg-indigo-50 transition-all group text-left"
                            >
                                <span class="block text-xs text-slate-500 mb-1">
                                    Previous Lesson
                                </span>
                                <span class="block font-bold text-slate-900 group-hover:text-indigo-700">
                                    {prevPost.data.title}
                                </span>
                            </a>
                        ) : (
                            <div />
                        )
                    }

                    {
                        nextPost && (
                            <a
                                href={`/learn/${nextPost.slug}`}
                                class="flex-1 p-4 rounded-xl border border-slate-200 hover:border-indigo-300 hover:bg-indigo-50 transition-all group text-right"
                            >
                                <span class="block text-xs text-slate-500 mb-1">
                                    Next Lesson
                                </span>
                                <span class="block font-bold text-slate-900 group-hover:text-indigo-700">
                                    {nextPost.data.title}
                                </span>
                            </a>
                        )
                    }
                </div>
            </main>

            <!-- Table of Contents (Desktop: Right Sticky) -->
            <aside class="hidden xl:block w-64 flex-shrink-0">
                <div class="sticky top-24">
                    <TableOfContents headings={headings} />
                </div>
            </aside>
        </div>
    </div>
</Layout>
