---
const { url, title } = Astro.props;
const encodedUrl = encodeURIComponent(url);
const encodedTitle = encodeURIComponent(title);
---

<!-- Desktop Floating Pill -->
<div
    class="fixed left-8 bottom-1/2 translate-y-1/2 z-40 hidden xl:flex flex-col gap-4 p-3 bg-white/70 backdrop-blur-xl border border-white/50 rounded-full shadow-[0_8px_32px_0_rgba(31,38,135,0.15)] transition-all hover:scale-105"
>
    <div
        class="text-[10px] font-bold text-slate-400 rotate-90 origin-center translate-y-2 mb-2 tracking-widest uppercase"
    >
        Share
    </div>

    <a
        href={`https://twitter.com/intent/tweet?text=${encodedTitle}&url=${encodedUrl}`}
        target="_blank"
        rel="noopener noreferrer"
        class="p-2.5 rounded-full text-slate-500 hover:text-white hover:bg-[#1DA1F2] transition-all duration-300 group relative"
        aria-label="Share on Twitter"
    >
        <svg fill="currentColor" viewBox="0 0 24 24" class="w-5 h-5">
            <path
                d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"
            ></path>
        </svg>
        <span
            class="absolute left-full ml-3 px-2 py-1 bg-slate-900 text-white text-xs rounded opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap pointer-events-none"
            >Twitter</span
        >
    </a>

    <a
        href={`https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}`}
        target="_blank"
        rel="noopener noreferrer"
        class="p-2.5 rounded-full text-slate-500 hover:text-white hover:bg-[#4267B2] transition-all duration-300 group relative"
        aria-label="Share on Facebook"
    >
        <svg fill="currentColor" viewBox="0 0 24 24" class="w-5 h-5">
            <path
                d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"
            ></path>
        </svg>
        <span
            class="absolute left-full ml-3 px-2 py-1 bg-slate-900 text-white text-xs rounded opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap pointer-events-none"
            >Facebook</span
        >
    </a>

    <a
        href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}`}
        target="_blank"
        rel="noopener noreferrer"
        class="p-2.5 rounded-full text-slate-500 hover:text-white hover:bg-[#0077b5] transition-all duration-300 group relative"
        aria-label="Share on LinkedIn"
    >
        <svg fill="currentColor" viewBox="0 0 24 24" class="w-5 h-5">
            <path
                d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
            ></path>
        </svg>
        <span
            class="absolute left-full ml-3 px-2 py-1 bg-slate-900 text-white text-xs rounded opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap pointer-events-none"
            >LinkedIn</span
        >
    </a>
</div>

<!-- Mobile Floating Capsule -->
