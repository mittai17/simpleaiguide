<div
    id="cookie-consent"
    class="fixed bottom-0 left-0 w-full bg-slate-900/95 backdrop-blur-md text-white border-t border-slate-700 z-[100] translate-y-full transition-transform duration-500 ease-in-out shadow-2xl"
>
    <div
        class="container mx-auto px-6 py-6 flex flex-col md:flex-row items-center justify-between gap-6"
    >
        <div class="flex-1">
            <h3 class="text-lg font-bold mb-2 flex items-center gap-2">
                <span class="text-xl">üç™</span> Cookie Policy
            </h3>
            <p class="text-slate-300 text-sm leading-relaxed max-w-2xl">
                We use cookies to enhance your browsing experience, serve
                personalized content, and analyze our traffic. By clicking
                "Accept", you consent to our use of cookies.
                <a
                    href="/privacy-policy"
                    class="text-indigo-400 hover:text-indigo-300 underline underline-offset-2 transition-colors"
                    >Read our Privacy Policy</a
                >.
            </p>
        </div>
        <div class="flex gap-4 shrink-0">
            <button
                id="decline-cookies"
                class="px-5 py-2.5 rounded-lg text-sm font-medium text-slate-300 hover:text-white hover:bg-slate-800 transition-colors border border-slate-700 hover:border-slate-600"
            >
                Decline
            </button>
            <button
                id="accept-cookies"
                class="px-5 py-2.5 rounded-lg text-sm font-bold bg-indigo-600 text-white hover:bg-indigo-500 transition-all shadow-lg shadow-indigo-500/20 hover:shadow-indigo-500/40"
            >
                Accept All
            </button>
        </div>
    </div>
</div>

<script>
    if (typeof window !== "undefined") {
        const cookieConsent = document.getElementById("cookie-consent");
        const acceptBtn = document.getElementById("accept-cookies");
        const declineBtn = document.getElementById("decline-cookies");
        const storageKey = "cookie-consent-choice";

        // Check if user has already made a choice
        const userChoice = localStorage.getItem(storageKey);

        if (!userChoice) {
            // Show banner after a slight delay
            setTimeout(() => {
                cookieConsent?.classList.remove("translate-y-full");
            }, 1000);
        }

        // Handle Accept
        acceptBtn?.addEventListener("click", () => {
            localStorage.setItem(storageKey, "accepted");
            hideBanner();
            // Optional: Initialize analytics or other cookie-dependent scripts here
        });

        // Handle Decline
        declineBtn?.addEventListener("click", () => {
            localStorage.setItem(storageKey, "declined");
            hideBanner();
        });

        function hideBanner() {
            cookieConsent?.classList.add("translate-y-full");
            // Optional: remove from DOM after animation
            setTimeout(() => {
                cookieConsent?.remove();
            }, 600);
        }
    }
</script>
