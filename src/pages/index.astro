---
import Layout from "../components/Layout.astro";
import Sidebar from "../components/Sidebar.astro";
import { getCollection } from "astro:content";

// 1. Fetch posts and sorting
const allPosts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// 2. Identify Featured Post (e.g., first one marked 'featured' or just latest)
// Logic: Try to find first post with 'featured: true', fallback to latest
const featuredPost = allPosts.find(p => p.data.featured) || allPosts[0];

// 3. Main feed posts (exclude featured one to avoid dubplication)
const mainPosts = allPosts.filter(p => p.slug !== featuredPost.slug).slice(0, 10);
---

<Layout
	title="Simple AI Guide - AI Tools & News"
	description="Expert guides and news on Artificial Intelligence. Learn to use ChatGPT, Midjourney, and top AI tools to boost productivity in 2025."
>
	<!-- Hero / Featured Section -->
	<section class="relative bg-slate-900 text-white overflow-hidden py-12 md:py-20">
		<!-- Background Effects -->
		<div class="absolute inset-0 z-0">
			<div class="absolute top-0 right-0 w-[500px] h-[500px] bg-indigo-500/20 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2 opacity-50"></div>
			<div class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-purple-500/20 rounded-full blur-3xl translate-y-1/2 -translate-x-1/2 opacity-50"></div>
            <div class="absolute inset-0 bg-[url('/assets/grid-pattern.svg')] opacity-10"></div>
		</div>

		<div class="container mx-auto px-4 relative z-10">
			<article class="flex flex-col md:flex-row gap-8 md:gap-12 items-center">
				<!-- Image -->
				<div class="w-full md:w-1/2 lg:w-3/5">
                    <a href={`/blog/${featuredPost.slug}`} class="block group relative rounded-2xl overflow-hidden shadow-2xl border border-slate-700/50">
                        {featuredPost.data.heroImage ? (
                            <img 
                                src={featuredPost.data.heroImage} 
                                alt={featuredPost.data.title}
                                class="w-full aspect-video object-cover transition-transform duration-700 group-hover:scale-105"
                            />
                        ) : (
                            <div class="w-full aspect-video bg-gradient-to-br from-indigo-900 to-slate-900 flex items-center justify-center">
                                <span class="text-indigo-400 font-bold text-2xl">Featured Article</span>
                            </div>
                        )}
                        <div class="absolute inset-0 bg-gradient-to-t from-slate-900/80 to-transparent opacity-60"></div>
                    </a>
				</div>

				<!-- Content -->
				<div class="w-full md:w-1/2 lg:w-2/5 flex flex-col items-start text-left">
					<div class="flex items-center gap-3 mb-4">
						<span class="px-3 py-1 rounded-full bg-indigo-500/20 border border-indigo-400/30 text-indigo-300 text-xs font-bold uppercase tracking-wider backdrop-blur-sm">
							Featured
						</span>
						<span class="text-indigo-200 text-sm font-medium">
                            {featuredPost.data.pubDate.toLocaleDateString("en-US", { month: "long", day: "numeric", year: "numeric" })}
						</span>
					</div>

					<h1 class="text-3xl md:text-4xl lg:text-5xl font-extrabold mb-6 leading-tight group-hover:text-indigo-300 transition-colors">
						<a href={`/blog/${featuredPost.slug}`} class="hover:text-indigo-400 transition-colors">
							{featuredPost.data.title}
						</a>
					</h1>

					<p class="text-lg text-slate-300 mb-8 leading-relaxed line-clamp-3">
						{featuredPost.data.description}
					</p>

					<a href={`/blog/${featuredPost.slug}`} class="inline-flex items-center gap-2 px-6 py-3 rounded-xl bg-indigo-600 hover:bg-indigo-500 text-white font-bold transition-all shadow-lg hover:shadow-indigo-500/25 hover:-translate-y-0.5">
						Read Article
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
                            <path fill-rule="evenodd" d="M3 10a.75.75 0 01.75-.75h10.638L10.23 5.29a.75.75 0 111.04-1.08l5.5 5.25a.75.75 0 010 1.08l-5.5 5.25a.75.75 0 11-1.04-1.08l4.158-3.96H3.75A.75.75 0 013 10z" clip-rule="evenodd" />
                        </svg>
					</a>
				</div>
			</article>
		</div>
	</section>

	<!-- Main Content Area with Sidebar -->
	<section class="container mx-auto px-4 py-12 md:py-16">
        <div class="flex flex-col lg:flex-row gap-12">
            
            <!-- Posts Feed -->
            <div class="w-full lg:w-3/4">
                <div class="flex items-center justify-between mb-8 border-b border-slate-200 dark:border-slate-700 pb-4">
                    <h2 class="text-2xl font-bold text-slate-900 dark:text-white flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-indigo-600">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        Latest Updates
                    </h2>
                    <a href="/blog" class="text-sm font-bold text-indigo-600 hover:text-indigo-700 flex items-center gap-1">
                        View Archive <span aria-hidden="true">&rarr;</span>
                    </a>
                </div>

                <div class="grid gap-10">
                    {mainPosts.map(post => (
                        <article class="flex flex-col md:flex-row gap-6 md:gap-8 items-start group">
                            <!-- Thumbnail -->
                            <a href={`/blog/${post.slug}`} class="w-full md:w-1/3 flex-shrink-0 aspect-[16/10] bg-slate-100 rounded-xl overflow-hidden border border-slate-200 dark:border-slate-700 relative">
                                {post.data.heroImage ? (
                                    <img 
                                        src={post.data.heroImage} 
                                        alt={post.data.title}
                                        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                                        loading="lazy"
                                    />
                                ) : (
                                    <div class="w-full h-full flex items-center justify-center bg-indigo-50 text-indigo-200">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 001.5-1.5V6a1.5 1.5 0 00-1.5-1.5H3.75A1.5 1.5 0 002.25 6v12a1.5 1.5 0 001.5 1.5zm10.5-11.25h.008v.008h-.008V8.25zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" />
                                        </svg>
                                    </div>
                                )}
                            </a>

                            <!-- Text Content -->
                            <div class="flex-1 min-w-0 py-1">
                                <div class="flex items-center gap-3 text-xs md:text-sm mb-3">
                                    <a href={`/blog/category/${post.data.category.toLowerCase().replace(/\s+/g, '-')}`} class="font-bold text-indigo-600 dark:text-indigo-400 hover:underline">
                                        {post.data.category}
                                    </a>
                                    <span class="text-slate-300 dark:text-slate-600">â€¢</span>
                                    <span class="text-slate-500 dark:text-slate-400">
                                        {post.data.pubDate.toLocaleDateString("en-US", { month: "short", day: "numeric", year: "numeric" })}
                                    </span>
                                </div>

                                <h3 class="text-xl md:text-2xl font-bold text-slate-900 dark:text-white mb-3 leading-snug group-hover:text-indigo-600 dark:group-hover:text-indigo-400 transition-colors">
                                    <a href={`/blog/${post.slug}`}>
                                        {post.data.title}
                                    </a>
                                </h3>

                                <p class="text-slate-600 dark:text-slate-300 text-sm md:text-base leading-relaxed line-clamp-3 mb-4">
                                    {post.data.description}
                                </p>

                                <a href={`/blog/${post.slug}`} class="text-sm font-bold text-slate-500 hover:text-indigo-600 dark:text-slate-400 dark:hover:text-indigo-400 inline-flex items-center gap-1 transition-colors">
                                    Continue Reading
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4">
                                        <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
                                    </svg>
                                </a>
                            </div>
                        </article>
                    ))}
                </div>

                <div class="mt-12 text-center pointer-events-none">
                     <p class="text-slate-400 text-sm">Showing 10 most recent posts. <a href="/blog" class="text-indigo-600 hover:underline pointer-events-auto">View all archives &rarr;</a></p>
                </div>
            </div>

            <!-- Right Sidebar -->
            <aside class="w-full lg:w-1/4 flex-shrink-0">
                <div class="sticky top-24">
                    <Sidebar />
                </div>
            </aside>

        </div>
	</section>
</Layout>
