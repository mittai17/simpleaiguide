---
import Navbar from "./Navbar.astro";
import Footer from "./Footer.astro";
import "../styles/global.css";

interface Props {
	title: string;
	description?: string;
}

const {
	title,
	description = "Simple AI Guide helps beginners, students, and creators understand AI tools in simple language with real examples.",
} = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/simpleaiguide/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;500;600;700;800&display=swap"
			rel="stylesheet"
		/>
		<title>{title}</title>
	</head>
	<body
		class="bg-white text-slate-900 min-h-screen flex flex-col antialiased selection:bg-indigo-500/30 relative overflow-x-hidden"
	>
		<!-- Global Space Background -->
		<div class="fixed inset-0 pointer-events-none z-0 overflow-hidden">
			<div
				class="absolute top-20 left-[10%] w-4 h-4 bg-indigo-200 rounded-full opacity-20 animate-float-slow"
			>
			</div>
			<div
				class="absolute top-40 right-[15%] w-3 h-3 bg-slate-300 rounded-full opacity-20 animate-float-delayed"
			>
			</div>
			<div
				class="absolute bottom-32 left-[5%] w-6 h-6 bg-indigo-100 rounded-full opacity-20 animate-float-slower"
			>
			</div>
			<div
				class="absolute top-1/2 right-[5%] text-indigo-200 opacity-10 animate-spin-slow w-12 h-12"
			>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					viewBox="0 0 24 24"
					fill="currentColor"
					class="w-full h-full"
				>
					<path
						d="M12 2.25a.75.75 0 01.75.75v2.25a.75.75 0 01-1.5 0V3a.75.75 0 01.75-.75zM7.5 12a4.5 4.5 0 119 0 4.5 4.5 0 01-9 0zM18.894 6.166a.75.75 0 00-1.06-1.06l-1.591 1.59a.75.75 0 101.06 1.061l1.591-1.59zM21.75 12a.75.75 0 01-.75.75h-2.25a.75.75 0 010-1.5H21a.75.75 0 01.75.75zM17.834 18.894a.75.75 0 001.06-1.06l-1.59-1.591a.75.75 0 10-1.061 1.06l1.59 1.591zM12 18a.75.75 0 01.75.75V21a.75.75 0 01-1.5 0v-2.25A.75.75 0 0112 18zM7.758 17.303a.75.75 0 00-1.061-1.06l-1.591 1.59a.75.75 0 001.06 1.061l1.591-1.59zM6 12a.75.75 0 01-.75.75H3a.75.75 0 010-1.5h2.25A.75.75 0 016 12zM6.697 7.757a.75.75 0 001.06-1.06l-1.59-1.591a.75.75 0 00-1.061 1.06l1.59 1.591z"
					></path>
				</svg>
			</div>
		</div>

		<Navbar />
		<main class="flex-grow relative z-10">
			<slot />
		</main>
		<Footer />

		<style is:global>
			@keyframes float-slow {
				0%,
				100% {
					transform: translateY(0);
				}
				50% {
					transform: translateY(-20px);
				}
			}
			@keyframes float-delayed {
				0%,
				100% {
					transform: translateY(0);
				}
				50% {
					transform: translateY(-15px);
				}
			}
			@keyframes float-slower {
				0%,
				100% {
					transform: translateY(0);
				}
				50% {
					transform: translateY(-30px);
				}
			}
			@keyframes spin-slow {
				from {
					transform: rotate(0deg);
				}
				to {
					transform: rotate(360deg);
				}
			}
			.animate-float-slow {
				animation: float-slow 15s ease-in-out infinite;
			}
			.animate-float-delayed {
				animation: float-delayed 18s ease-in-out infinite 5s;
			}
			.animate-float-slower {
				animation: float-slower 25s ease-in-out infinite 2s;
			}
			.animate-spin-slow {
				animation: spin-slow 120s linear infinite;
			}
		</style>
	</body>
</html>
