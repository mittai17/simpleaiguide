---
import Layout from "../../components/Layout.astro";
import LearnSidebar from "../../components/LearnSidebar.astro";
import TableOfContents from "../../components/TableOfContents.astro";
import Breadcrumbs from "../../components/Breadcrumbs.astro";
import MCQ from "../../components/MCQ.astro";
import YouTubeEmbed from "../../components/YouTubeEmbed.astro";
import SocialShare from "../../components/SocialShare.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
    const posts = await getCollection("learn");
    return posts.map((post: any) => ({
        params: { slug: post.slug },
        props: { post },
    }));
}

const { post } = Astro.props;
const { Content, headings } = await post.render();

const wordsPerMinute = 200;
const wordCount = post.body ? post.body.split(/\s+/).length : 0;
const readingTime = Math.ceil(wordCount / wordsPerMinute) || 1;

const allPosts = await getCollection("learn");
const currentCategoryPosts = allPosts
    .filter((p: any) => p.data.category === post.data.category)
    .sort((a: any, b: any) => a.data.order - b.data.order);

const currentIndex = currentCategoryPosts.findIndex(
    (p: any) => p.slug === post.slug,
);
const prevPost =
    currentIndex > 0 ? currentCategoryPosts[currentIndex - 1] : null;
const nextPost =
    currentIndex < currentCategoryPosts.length - 1
        ? currentCategoryPosts[currentIndex + 1]
        : null;
---

<Layout
    title={`${post.data.title} - Learn AI`}
    description={post.data.description}
>
    <!-- Schema.org JSON-LD -->
    <script
        type="application/ld+json"
        is:inline
        set:html={JSON.stringify({
            "@context": "https://schema.org",
            "@type": "TechArticle",
            headline: post.data.title,
            description: post.data.description,
            articleSection: post.data.category,
            publisher: {
                "@id": "https://simpleaiguide.tech/#organization",
            },
            mainEntityOfPage: {
                "@type": "WebPage",
                "@id": `https://simpleaiguide.tech/learn/${post.slug}`,
            },
            image: "https://simpleaiguide.tech/social-image.png",
        })}
    />

    <div class="container mx-auto px-6 md:px-4 py-8">
        <div class="flex flex-col lg:flex-row gap-8">
            <!-- Sidebar (Desktop: Left, Mobile: Hidden/Drawer) -->
            <!-- Sidebar (Desktop: Left) -->
            <aside class="hidden lg:block w-64 flex-shrink-0">
                <div
                    class="sticky top-24 h-[calc(100vh-6rem)] overflow-y-auto custom-scrollbar"
                >
                    <LearnSidebar
                        activeSlug={post.slug}
                        activeCategory={post.data.category}
                    />

                    <div class="mt-8 pt-8 border-t border-slate-100">
                        <SocialShare
                            title={post.data.title}
                            description={post.data.description}
                            slug={post.slug}
                        />
                    </div>
                </div>
            </aside>

            <!-- Mobile Sidebar Toggle & Drawer -->
            <div class="lg:hidden w-full mb-6">
                <button
                    id="course-menu-btn"
                    class="flex items-center justify-between w-full px-5 py-4 bg-white border border-slate-200 rounded-xl shadow-sm text-slate-900 font-bold hover:border-indigo-300 hover:shadow-md transition-all active:scale-[0.99]"
                >
                    <span class="flex items-center gap-3">
                        <span
                            class="p-1.5 bg-indigo-50 rounded-lg text-indigo-600"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke-width="2"
                                stroke="currentColor"
                                class="w-5 h-5"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
                                ></path>
                            </svg>
                        </span>
                        Course Menu
                    </span>
                    <span
                        class="text-xs font-medium text-slate-500 bg-slate-50 px-2 py-1 rounded-md border border-slate-100"
                        >Tap to navigate</span
                    >
                </button>
            </div>

            <div
                id="mobile-course-menu"
                class="fixed inset-0 z-[60] bg-slate-900/50 backdrop-blur-sm hidden transition-opacity duration-300"
            >
                <div
                    class="absolute left-0 top-0 bottom-0 w-3/4 max-w-xs bg-white shadow-2xl p-6 overflow-y-auto transform transition-transform duration-300 -translate-x-full"
                    id="mobile-menu-content"
                >
                    <div class="flex justify-between items-center mb-6">
                        <h2 class="font-bold text-lg text-slate-900">
                            Navigation
                        </h2>
                        <button
                            id="close-course-menu"
                            class="p-2 text-slate-400 hover:text-slate-900 transition-colors"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke-width="1.5"
                                stroke="currentColor"
                                class="w-6 h-6"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </button>
                    </div>
                    <LearnSidebar
                        activeSlug={post.slug}
                        activeCategory={post.data.category}
                    />
                </div>
            </div>

            <script>
                const btn = document.getElementById("course-menu-btn");
                const menu = document.getElementById("mobile-course-menu");
                const menuContent = document.getElementById(
                    "mobile-menu-content",
                );
                const closeBtn = document.getElementById("close-course-menu");

                function openMenu() {
                    menu?.classList.remove("hidden");
                    // Small delay to allow display:block to apply before transition
                    setTimeout(() => {
                        menu?.classList.remove("opacity-0");
                        menuContent?.classList.remove("-translate-x-full");
                    }, 10);
                }

                function closeMenu() {
                    menu?.classList.add("opacity-0");
                    menuContent?.classList.add("-translate-x-full");
                    setTimeout(() => {
                        menu?.classList.add("hidden");
                    }, 300);
                }

                btn?.addEventListener("click", openMenu);
                closeBtn?.addEventListener("click", closeMenu);

                // Close on outside click
                menu?.addEventListener("click", (e) => {
                    if (e.target === menu) {
                        closeMenu();
                    }
                });
            </script>

            <!-- Main Content -->
            <main class="flex-grow min-w-0">
                <div class="mb-6">
                    <Breadcrumbs
                        items={[
                            { label: "Home", href: "/" },
                            { label: "Learn", href: "/learn" },
                            { label: post.data.title },
                        ]}
                    />
                </div>

                <article
                    class="prose prose-slate max-w-4xl mx-auto prose-lg md:prose-xl prose-p:leading-relaxed prose-li:leading-relaxed prose-pre:bg-slate-900 prose-pre:rounded-xl prose-pre:shadow-lg prose-img:rounded-xl prose-img:shadow-md prose-img:mx-auto prose-img:max-h-[500px] prose-img:w-auto prose-img:max-w-full prose-a:text-indigo-600 prose-a:no-underline hover:prose-a:underline"
                >
                    <div
                        class="flex items-center gap-4 text-sm text-slate-500 mb-4"
                    >
                        <span
                            class="px-2.5 py-0.5 rounded-full bg-indigo-50 text-indigo-600 font-bold text-xs uppercase tracking-wider"
                        >
                            {post.data.category.replace("-", " ")}
                        </span>
                        <span>â€¢</span>
                        <span>{readingTime} min read</span>
                    </div>
                    <h1
                        class="text-4xl font-extrabold text-slate-900 mt-2 mb-8"
                    >
                        {post.data.title}
                    </h1>

                    {
                        post.data.keyTakeaways &&
                            post.data.keyTakeaways.length > 0 && (
                                <div class="bg-indigo-50 border-l-4 border-indigo-500 p-6 mb-8 rounded-r-xl not-prose">
                                    <h3 class="text-lg font-bold text-indigo-900 mb-3 flex items-center gap-2">
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            viewBox="0 0 24 24"
                                            fill="currentColor"
                                            class="w-5 h-5"
                                        >
                                            <path d="M12 2.25a.75.75 0 01.75.75v2.25a.75.75 0 01-1.5 0V3a.75.75 0 01.75-.75zM7.5 12a4.5 4.5 0 119 0 4.5 4.5 0 01-9 0zM18.894 6.166a.75.75 0 00-1.06-1.06l-1.591 1.59a.75.75 0 101.06 1.061l1.591-1.59zM21.75 12a.75.75 0 01-.75.75h-2.25a.75.75 0 010-1.5H21a.75.75 0 01.75.75zM17.834 18.894a.75.75 0 001.06-1.06l-1.59-1.591a.75.75 0 10-1.061 1.06l1.59 1.591zM12 18a.75.75 0 01.75.75V21a.75.75 0 01-1.5 0v-2.25A.75.75 0 0112 18zM7.758 17.303a.75.75 0 00-1.061-1.06l-1.591 1.59a.75.75 0 001.06 1.061l1.591-1.59zM6 12a.75.75 0 01-.75.75H3a.75.75 0 010-1.5h2.25A.75.75 0 016 12zM6.697 7.757a.75.75 0 001.06-1.06l-1.59-1.591a.75.75 0 00-1.061 1.06l1.59 1.591z" />
                                        </svg>
                                        Key Takeaways
                                    </h3>
                                    <ul class="space-y-2">
                                        {post.data.keyTakeaways.map(
                                            (takeaway: string) => (
                                                <li class="flex items-start gap-2 text-indigo-800">
                                                    <span class="mt-1.5 w-1.5 h-1.5 bg-indigo-400 rounded-full flex-shrink-0" />
                                                    <span>{takeaway}</span>
                                                </li>
                                            ),
                                        )}
                                    </ul>
                                </div>
                            )
                    }

                    <Content components={{ MCQ, YouTubeEmbed }} />

                    <!-- Mobile Social Share (Visible only on small screens at bottom of content) -->
                    <div class="lg:hidden mt-8 mb-8">
                        <SocialShare
                            title={post.data.title}
                            description={post.data.description}
                            slug={post.slug}
                        />
                    </div>
                </article>

                <!-- Next/Prev Navigation -->
                <div
                    class="mt-16 pt-8 border-t border-slate-100 grid sm:grid-cols-2 gap-6"
                >
                    {
                        prevPost ? (
                            <a
                                href={`/learn/${prevPost.slug}`}
                                class="flex flex-col p-6 rounded-2xl border border-slate-200 hover:border-indigo-300 hover:bg-indigo-50/50 hover:shadow-md transition-all group text-left h-full"
                            >
                                <span class="text-xs font-bold text-slate-400 uppercase tracking-wider mb-2 flex items-center gap-1">
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke-width="2"
                                        stroke="currentColor"
                                        class="w-3 h-3"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18"
                                        />
                                    </svg>
                                    Previous Lesson
                                </span>
                                <span class="text-lg font-bold text-slate-900 group-hover:text-indigo-700">
                                    {prevPost.data.title}
                                </span>
                            </a>
                        ) : (
                            <div />
                        )
                    }

                    {
                        nextPost && (
                            <a
                                href={`/learn/${nextPost.slug}`}
                                class="flex flex-col p-6 rounded-2xl border border-slate-200 hover:border-indigo-300 hover:bg-indigo-50/50 hover:shadow-md transition-all group text-right h-full items-end"
                            >
                                <span class="text-xs font-bold text-slate-400 uppercase tracking-wider mb-2 flex items-center gap-1">
                                    Next Lesson
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke-width="2"
                                        stroke="currentColor"
                                        class="w-3 h-3"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"
                                        />
                                    </svg>
                                </span>
                                <span class="text-lg font-bold text-slate-900 group-hover:text-indigo-700">
                                    {nextPost.data.title}
                                </span>
                            </a>
                        )
                    }
                </div>
            </main>

            <!-- Table of Contents (Desktop: Right Sticky) -->
            <aside class="hidden xl:block w-64 flex-shrink-0">
                <div
                    class="sticky top-24 h-[calc(100vh-6rem)] overflow-y-auto custom-scrollbar"
                >
                    <TableOfContents headings={headings} />
                </div>
            </aside>
        </div>
    </div>
</Layout>
