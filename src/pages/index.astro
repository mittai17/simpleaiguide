---
import Layout from "../components/Layout.astro";
import Starfield from "../components/Starfield.astro";
import { getCollection } from "astro:content";

const allPosts = await getCollection("blog");
const latestPosts = allPosts
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 3);

const allLearn = await getCollection("learn");
const learnModules = allLearn
	.sort((a, b) => (a.data.order || 0) - (b.data.order || 0))
	.slice(0, 3);
---

<Layout
	title="Simple AI Guide - Fast, Modern Blog"
	description="Learn Artificial Intelligence for free. A step-by-step guide to AI, Machine Learning, and tools like ChatGPT for absolute beginners."
>
	<!-- Hero Section -->
	<section
		class="container mx-auto px-4 py-10 md:py-24 flex flex-col lg:flex-row items-center gap-10 md:gap-12 relative overflow-hidden"
	>
		<Starfield />

		<!-- Hero Text -->
		<div class="flex-1 text-center lg:text-left z-10 w-full">
			<div
				class="inline-block px-4 py-1.5 rounded-full bg-indigo-50 border border-indigo-100 text-indigo-600 font-bold text-sm mb-6 animate-fade-in"
			>
				ðŸš€ The Missing Manual for AI
			</div>
			<h1
				class="text-4xl md:text-6xl lg:text-7xl font-extrabold tracking-tight mb-6 text-slate-900 dark:text-white leading-snug md:leading-tight"
			>
				Learn AI: Not Rocket Science <span
					class="text-indigo-600 dark:text-indigo-400 block"
					>(But Close Enough)</span
				>
			</h1>

			<p
				class="text-lg md:text-xl text-slate-600 dark:text-slate-400 mb-10 md:mb-10 leading-relaxed max-w-2xl mx-auto lg:mx-0"
			>
				We translate robot-speak into human. No alien decoder ring
				required. Master the basics, explore tools, and stay ahead.
			</p>

			<div
				class="flex flex-col sm:flex-row gap-5 justify-center lg:justify-start w-full"
			>
				<a
					href="/blog"
					class="w-full sm:w-auto px-8 py-4 rounded-xl bg-gradient-to-r from-indigo-600 to-indigo-500 text-white font-bold hover:from-indigo-500 hover:to-indigo-400 transition-all shadow-lg shadow-indigo-500/30 hover:shadow-indigo-500/50 hover:-translate-y-1 flex justify-center"
				>
					Read Latest Articles
				</a>
				<a
					href="/learn/ai-basics"
					class="w-full sm:w-auto px-8 py-4 rounded-xl bg-white dark:bg-slate-800 text-slate-700 dark:text-slate-200 font-bold hover:bg-slate-50 dark:hover:bg-slate-700 transition-all border border-slate-200 dark:border-slate-700 hover:border-slate-300 dark:hover:border-slate-600 hover:-translate-y-1 flex justify-center"
				>
					Start Free Course
				</a>
			</div>
		</div>

		<!-- Hero Featured Cards -->
		<div class="flex-1 w-full max-w-md lg:max-w-lg relative z-10">
			<!-- Mobile: Horizontal Scroll Snap, Desktop: Grid -->
			<div class="relative">
				<div
					class="flex md:grid md:gap-6 overflow-x-auto md:overflow-visible snap-x snap-mandatory pb-8 md:pb-0 -mx-6 px-6 md:mx-0 md:px-0 gap-5 no-scrollbar"
				>
					<!-- Featured Lesson Card -->
					<a
						href="/learn/ai-basics/module-1/1-1-what-is-ai"
						class="group relative overflow-hidden rounded-2xl bg-white dark:bg-slate-800 p-6 shadow-lg md:shadow-xl transition-all hover:-translate-y-1 hover:shadow-2xl border border-slate-100 dark:border-slate-700 min-w-[85%] md:min-w-0 snap-center"
					>
						<div
							class="absolute -right-6 -top-6 h-24 w-24 rounded-full bg-indigo-50 transition-transform group-hover:scale-150"
						>
						</div>
						<div class="relative z-10">
							<span
								class="mb-2 inline-block rounded-full bg-indigo-100 px-3 py-1 text-xs font-bold uppercase tracking-wider text-indigo-600"
							>
								Start Here
							</span>
							<h3
								class="mb-2 text-xl font-bold text-slate-900 dark:text-white group-hover:text-indigo-600 dark:group-hover:text-indigo-400 transition-colors"
							>
								What is Artificial Intelligence?
							</h3>
							<p
								class="text-sm text-slate-600 dark:text-slate-400"
							>
								The perfect starting point. Understand the core
								concepts of AI in 5 minutes.
							</p>
						</div>
					</a>

					<!-- Featured Blog Card -->
					<a
						href="/blog/best-ai-tools/i-tried-289-ai-tools"
						class="group relative overflow-hidden rounded-2xl bg-white dark:bg-slate-800 p-6 shadow-lg md:shadow-xl transition-all hover:-translate-y-1 hover:shadow-2xl border border-slate-100 dark:border-slate-700 min-w-[85%] md:min-w-0 snap-center"
					>
						<div
							class="absolute -right-6 -top-6 h-24 w-24 rounded-full bg-purple-50 transition-transform group-hover:scale-150"
						>
						</div>
						<div class="relative z-10">
							<span
								class="mb-2 inline-block rounded-full bg-purple-100 px-3 py-1 text-xs font-bold uppercase tracking-wider text-purple-600"
							>
								Trending
							</span>
							<h3
								class="mb-2 text-xl font-bold text-slate-900 dark:text-white group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors"
							>
								I Tried 289 AI Tools
							</h3>
							<p
								class="text-sm text-slate-600 dark:text-slate-400"
							>
								The best tools for making money online in 2025.
								Tested and verified.
							</p>
						</div>
					</a>
				</div>
				<!-- Mobile Scroll Hint -->
				<div
					class="md:hidden absolute bottom-0 left-0 w-full flex justify-center pointer-events-none"
				>
					<span
						class="text-xs text-slate-400 bg-white/80 backdrop-blur px-3 py-1 rounded-full shadow-sm border border-slate-100"
					>
						Swipe to explore â†’
					</span>
				</div>
			</div>

			<!-- Decorative Blobs -->
			<div
				class="absolute -z-10 top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[120%] h-[120%] bg-indigo-500/5 rounded-full blur-3xl"
			>
			</div>
		</div>
	</section>

	<!-- Captain's Log (Blog) Section -->
	<section class="py-24 bg-slate-900 text-white relative overflow-hidden">
		<!-- Decorative Background -->
		<div class="absolute top-0 left-0 w-full h-full overflow-hidden z-0">
			<div
				class="absolute top-0 right-0 w-[500px] h-[500px] bg-indigo-500/20 rounded-full blur-[100px]"
			>
			</div>
			<div
				class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-purple-500/20 rounded-full blur-[100px]"
			>
			</div>
		</div>

		<div class="container mx-auto px-4 relative z-10">
			<div
				class="flex flex-col md:flex-row justify-between items-end mb-12 gap-6"
			>
				<div>
					<span
						class="text-indigo-400 font-bold tracking-wider uppercase text-sm mb-2 block"
						>Captain's Log</span
					>
					<h2 class="text-3xl md:text-4xl font-bold text-white">
						Latest Intelligence
					</h2>
				</div>
				<a
					href="/blog"
					class="text-indigo-400 font-bold hover:text-indigo-300 flex items-center gap-2 group"
				>
					Read All Articles
					<svg
						class="w-4 h-4 transition-transform group-hover:translate-x-1"
						fill="none"
						stroke="currentColor"
						viewBox="0 0 24 24"
						><path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg
					>
				</a>
			</div>

			<div class="grid md:grid-cols-3 gap-8">
				{
					latestPosts.map((post) => (
						<a
							href={`/blog/${post.slug}`}
							class="group block p-6 rounded-2xl bg-slate-800/50 border border-slate-700 hover:border-indigo-500/50 hover:bg-slate-800 transition-all backdrop-blur-sm"
						>
							<div class="flex items-center justify-between mb-4">
								<span class="text-xs font-bold uppercase tracking-wider text-indigo-400">
									{post.data.category}
								</span>
								<time
									datetime={post.data.pubDate.toISOString()}
									class="text-xs text-slate-400"
								>
									{post.data.pubDate.toLocaleDateString(
										"en-US",
										{
											month: "short",
											day: "numeric",
										},
									)}
								</time>
							</div>
							<h3 class="text-xl font-bold text-white mb-2 group-hover:text-indigo-400 transition-colors">
								{post.data.title}
							</h3>
							<p class="text-slate-400 text-sm line-clamp-3 mb-4">
								{post.data.description}
							</p>
							<span class="text-sm font-bold text-indigo-400 flex items-center gap-1">
								Read Article{" "}
								<svg
									class="w-4 h-4"
									fill="none"
									stroke="currentColor"
									viewBox="0 0 24 24"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M9 5l7 7-7 7"
									/>
								</svg>
							</span>
						</a>
					))
				}
			</div>
		</div>
	</section>

	<!-- Why Simple AI? Section -->
	<section
		class="py-20 bg-slate-50 dark:bg-slate-900/50 border-y border-slate-100 dark:border-slate-800"
	>
		<div class="container mx-auto px-4">
			<div class="text-center mb-16">
				<h2
					class="text-3xl font-bold text-slate-900 dark:text-white mb-4"
				>
					Why This Guide?
				</h2>
				<p class="text-slate-600 dark:text-slate-400 max-w-2xl mx-auto">
					Most AI resources are too technical or too hype-driven. We
					take a different approach.
				</p>
			</div>

			<div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
				<div
					class="bg-white dark:bg-slate-800 p-8 rounded-2xl shadow-sm border border-slate-100 dark:border-slate-700 text-center hover:shadow-md transition-shadow"
				>
					<div
						class="w-12 h-12 bg-indigo-100 rounded-xl flex items-center justify-center text-indigo-600 mb-6 mx-auto"
					>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							class="w-6 h-6"
							fill="none"
							viewBox="0 0 24 24"
							stroke="currentColor"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
							></path>
						</svg>
					</div>
					<h3
						class="font-bold text-lg text-slate-900 dark:text-white mb-3"
					>
						Zero Jargon
					</h3>
					<p class="text-slate-600 dark:text-slate-400 text-sm">
						We explain complex concepts in plain English. No PhD
						required.
					</p>
				</div>
				<div
					class="bg-white dark:bg-slate-800 p-8 rounded-2xl shadow-sm border border-slate-100 dark:border-slate-700 text-center hover:shadow-md transition-shadow"
				>
					<div
						class="w-12 h-12 bg-emerald-100 rounded-xl flex items-center justify-center text-emerald-600 mb-6 mx-auto"
					>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							class="w-6 h-6"
							fill="none"
							viewBox="0 0 24 24"
							stroke="currentColor"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
							></path>
						</svg>
					</div>
					<h3
						class="font-bold text-lg text-slate-900 dark:text-white mb-3"
					>
						100% Free
					</h3>
					<p class="text-slate-600 dark:text-slate-400 text-sm">
						Knowledge should be accessible. No paywalls, no
						sign-ups.
					</p>
				</div>
				<div
					class="bg-white dark:bg-slate-800 p-8 rounded-2xl shadow-sm border border-slate-100 dark:border-slate-700 text-center hover:shadow-md transition-shadow"
				>
					<div
						class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center text-purple-600 mb-6 mx-auto"
					>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							class="w-6 h-6"
							fill="none"
							viewBox="0 0 24 24"
							stroke="currentColor"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M13 10V3L4 14h7v7l9-11h-7z"></path>
						</svg>
					</div>
					<h3
						class="font-bold text-lg text-slate-900 dark:text-white mb-3"
					>
						Always Current
					</h3>
					<p class="text-slate-600 dark:text-slate-400 text-sm">
						AI moves fast. We update our content weekly to keep you
						ahead.
					</p>
				</div>
			</div>
		</div>
	</section>

	<!-- Flight Training (Learn) Section -->
	<section class="py-24 container mx-auto px-4">
		<div
			class="flex flex-col md:flex-row justify-between items-end mb-12 gap-6"
		>
			<div>
				<span
					class="text-indigo-600 font-bold tracking-wider uppercase text-sm mb-2 block"
					>Flight Training</span
				>
				<h2
					class="text-3xl md:text-4xl font-bold text-slate-900 dark:text-white"
				>
					Master the Basics
				</h2>
			</div>
			<a
				href="/learn"
				class="text-indigo-600 dark:text-indigo-400 font-bold hover:text-indigo-700 dark:hover:text-indigo-300 flex items-center gap-2 group"
			>
				View Full Curriculum
				<svg
					class="w-4 h-4 transition-transform group-hover:translate-x-1"
					fill="none"
					stroke="currentColor"
					viewBox="0 0 24 24"
					><path
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg
				>
			</a>
		</div>

		<div class="grid md:grid-cols-3 gap-8">
			{
				learnModules.map((module) => (
					<a
						href={`/learn/${module.slug}`}
						class="group block p-6 rounded-2xl bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 hover:border-indigo-300 dark:hover:border-indigo-500 hover:shadow-lg transition-all"
					>
						<div class="flex items-center justify-between mb-4">
							<span class="text-xs font-bold uppercase tracking-wider text-indigo-500 bg-indigo-50 px-2 py-1 rounded-md">
								{module.data.category.replace(/-/g, " ")}
							</span>
							{module.data.level && (
								<span class="text-xs font-medium text-slate-400">
									{module.data.level}
								</span>
							)}
						</div>
						<h3 class="text-xl font-bold text-slate-900 dark:text-white mb-2 group-hover:text-indigo-600 dark:group-hover:text-indigo-400 transition-colors">
							{module.data.title}
						</h3>
						<p class="text-slate-600 dark:text-slate-400 text-sm line-clamp-3 mb-4">
							{module.data.description}
						</p>
						<span class="text-sm font-bold text-indigo-600 dark:text-indigo-400 flex items-center gap-1">
							Start Lesson{" "}
							<svg
								class="w-4 h-4"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M9 5l7 7-7 7"
								/>
							</svg>
						</span>
					</a>
				))
			}
		</div>
	</section>

	<!-- CTA Section -->
	<section class="py-20 container mx-auto px-4 text-center">
		<div
			class="bg-indigo-600 rounded-3xl p-12 md:p-20 relative overflow-hidden shadow-2xl"
		>
			<div
				class="absolute top-0 left-0 w-full h-full bg-[url('/assets/noise.png')] opacity-10 mix-blend-overlay"
			>
			</div>
			<div class="relative z-10 max-w-2xl mx-auto">
				<h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
					Ready to Launch?
				</h2>
				<p class="text-indigo-100 text-lg mb-10">
					Join thousands of others mastering AI. No spam, just
					knowledge.
				</p>
				<div class="flex flex-col sm:flex-row gap-4 justify-center">
					<a
						href="/blog"
						class="px-8 py-4 rounded-xl bg-white text-indigo-600 font-bold hover:bg-indigo-50 transition-all shadow-lg"
					>
						Browse All Articles
					</a>
				</div>
			</div>
		</div>
	</section>
</Layout>
