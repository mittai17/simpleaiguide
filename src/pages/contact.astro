---
import Layout from "../components/Layout.astro";
---

<Layout
  title="Contact"
  description="Contact Simple AI Guide for questions or topic requests."
>
  <section class="container mx-auto px-4 py-16 md:py-24 max-w-6xl relative">
    <!-- Floating Elements -->
    <div
      class="absolute top-0 right-0 w-32 h-32 bg-indigo-500/10 rounded-full blur-3xl -z-10 animate-pulse"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 w-40 h-40 bg-purple-500/10 rounded-full blur-3xl -z-10 animate-pulse delay-700"
    >
    </div>

    <div class="grid md:grid-cols-2 gap-12 items-start">
      <!-- Left Column: Info -->
      <div class="md:sticky md:top-24 relative">
        <div
          class="absolute -top-10 -left-10 w-20 h-20 bg-indigo-100 rounded-full opacity-20 animate-float-slow hidden md:block"
        >
        </div>

        <h1
          class="text-4xl md:text-5xl font-extrabold tracking-tight mb-6 text-slate-900 relative z-10"
        >
          Open a Channel to <span class="text-indigo-600">Base</span>
        </h1>

        <p class="text-xl text-slate-600 mb-8 leading-relaxed relative z-10">
          Signal lost? Need navigation assistance? Or just want to share a
          discovery? We're listening on all frequencies.
        </p>

        <div class="space-y-6 relative z-10">
          <div class="flex items-start gap-4 group">
            <div
              class="w-12 h-12 bg-white/50 backdrop-blur-sm border border-white/50 rounded-xl flex items-center justify-center text-indigo-600 flex-shrink-0 shadow-sm group-hover:scale-110 transition-transform duration-300"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-6 h-6"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"
                ></path>
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-slate-900 mb-1">Subspace Frequency</h3>
              <a
                href="mailto:contact@simpleaiguide.tech"
                class="text-indigo-600 hover:text-indigo-700 font-medium relative"
              >
                contact@simpleaiguide.tech
                <span
                  class="absolute -bottom-1 left-0 w-0 h-0.5 bg-indigo-600 transition-all group-hover:w-full"
                ></span>
              </a>
              <p class="text-sm text-slate-500 mt-1">
                Response time: ~24 Earth hours.
              </p>
            </div>
          </div>
        </div>

        <!-- Decorative Astronaut -->
        <div class="mt-12 relative hidden md:block">
          <div class="absolute inset-0 bg-indigo-500/5 blur-2xl rounded-full">
          </div>
          <img
            src="/assets/astronaut-laptop.png"
            alt="Comms Officer"
            class="w-48 h-auto opacity-80 animate-float-delayed relative z-10"
          />
        </div>
      </div>

      <!-- Right Column: Form -->
      <div
        class="bg-white/70 backdrop-blur-md p-8 rounded-2xl shadow-xl border border-white/50 relative overflow-hidden group"
      >
        <div
          class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-700 origin-left"
        >
        </div>

        <form
          action="https://formsubmit.co/contact@simpleaiguide.tech"
          method="POST"
          class="space-y-6 relative z-10"
        >
          <input type="hidden" name="_captcha" value="false" />
          <input
            type="hidden"
            name="_next"
            id="next-redirect"
            value="https://simpleaiguide.tech/contact"
          />
          <div>
            <label
              for="email"
              class="block text-sm font-medium text-slate-700 mb-2"
              >Comms ID (Email)</label
            >
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 rounded-lg bg-white/50 border border-slate-200 text-slate-900 focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none transition-all placeholder:text-slate-400"
              placeholder="explorer@universe.com"
            />
          </div>

          <!-- ... (rest of form) ... -->

          <script>
            // Set dynamic redirect URL to support localhost and production
            const nextInput = document.getElementById(
              "next-redirect",
            ) as HTMLInputElement;
            if (nextInput) {
              nextInput.value =
                window.location.origin +
                window.location.pathname +
                "?submitted=true";
            }

            // Check for submitted parameter
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.get("submitted") === "true") {
              const modal = document.getElementById("success-modal");
              const modalContent = modal?.querySelector("div:nth-child(2)");
              const closeButton = document.getElementById("close-modal");

              if (modal && modalContent && closeButton) {
                // Show modal
                modal.classList.remove("opacity-0", "pointer-events-none");
                modalContent.classList.remove("scale-90");
                modalContent.classList.add("scale-100");

                // Clean URL
                const newUrl = window.location.pathname;
                window.history.replaceState({}, document.title, newUrl);

                // Close button handler
                closeButton.addEventListener("click", () => {
                  modal.classList.add("opacity-0", "pointer-events-none");
                  modalContent.classList.remove("scale-100");
                  modalContent.classList.add("scale-90");
                });
              }
            }
          </script>

          <style>
            @keyframes check {
              0% {
                stroke-dasharray: 0, 100;
                stroke-dashoffset: 0;
              }
              100% {
                stroke-dasharray: 100, 0;
                stroke-dashoffset: 0;
              }
            }
            .animate-check {
              animation: check 0.6s ease-in-out forwards;
            }
          </style>
        </form>
      </div>
    </div>
  </section></Layout
>
