---
const { url, title } = Astro.props;
const encodedUrl = encodeURIComponent(url);
const encodedTitle = encodeURIComponent(title);
---

<!-- Botted Floating Dock (Unified for Desktop & Mobile) -->
<div
    class="fixed bottom-6 left-1/2 -translate-x-1/2 z-50 flex flex-col items-center gap-2 group/dock"
>
    <!-- Label (Optional, appears on hover) -->
    <div
        class="opacity-0 translate-y-2 group-hover/dock:opacity-100 group-hover/dock:translate-y-0 transition-all duration-300 text-xs font-bold text-slate-500 bg-white/90 backdrop-blur-md px-3 py-1 rounded-full shadow-sm mb-1 pointer-events-none"
    >
        Share Article
    </div>

    <!-- Main Dock -->
    <div
        class="flex items-center gap-1 p-2 bg-white/80 backdrop-blur-xl border border-white/60 rounded-full shadow-[0_8px_30px_rgb(0,0,0,0.12)] hover:shadow-[0_8px_40px_rgb(0,0,0,0.2)] transition-all duration-300 scale-100 hover:scale-105 ring-1 ring-slate-900/5"
    >
        <!-- Twitter -->
        <a
            href={`https://twitter.com/intent/tweet?text=${encodedTitle}&url=${encodedUrl}`}
            target="_blank"
            rel="noopener noreferrer"
            class="p-3 rounded-full text-slate-500 hover:text-white hover:bg-[#1DA1F2] transition-all duration-300 relative group"
            aria-label="Share on Twitter"
        >
            <svg fill="currentColor" viewBox="0 0 24 24" class="w-5 h-5">
                <path
                    d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"
                ></path>
            </svg>
            <!-- Tooltip -->
            <span
                class="absolute bottom-full left-1/2 -translate-x-1/2 mb-2 px-2 py-1 bg-slate-900 text-white text-[10px] font-bold rounded opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap pointer-events-none"
                >Twitter</span
            >
        </a>

        <div class="w-px h-6 bg-slate-300 mx-1"></div>

        <!-- Facebook -->
        <a
            href={`https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}`}
            target="_blank"
            rel="noopener noreferrer"
            class="p-3 rounded-full text-slate-500 hover:text-white hover:bg-[#4267B2] transition-all duration-300 relative group"
            aria-label="Share on Facebook"
        >
            <svg fill="currentColor" viewBox="0 0 24 24" class="w-5 h-5">
                <path
                    d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"
                ></path>
            </svg>
            <!-- Tooltip -->
            <span
                class="absolute bottom-full left-1/2 -translate-x-1/2 mb-2 px-2 py-1 bg-slate-900 text-white text-[10px] font-bold rounded opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap pointer-events-none"
                >Facebook</span
            >
        </a>

        <div class="w-px h-6 bg-slate-300 mx-1"></div>

        <!-- LinkedIn -->
        <a
            href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}`}
            target="_blank"
            rel="noopener noreferrer"
            class="p-3 rounded-full text-slate-500 hover:text-white hover:bg-[#0077b5] transition-all duration-300 relative group"
            aria-label="Share on LinkedIn"
        >
            <svg fill="currentColor" viewBox="0 0 24 24" class="w-5 h-5">
                <path
                    d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                ></path>
            </svg>
            <!-- Tooltip -->
            <span
                class="absolute bottom-full left-1/2 -translate-x-1/2 mb-2 px-2 py-1 bg-slate-900 text-white text-[10px] font-bold rounded opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap pointer-events-none"
                >LinkedIn</span
            >
        </a>
    </div>
</div>
