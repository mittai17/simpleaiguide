---
interface Crumb {
    label: string;
    href?: string;
}

const { items } = Astro.props as { items: Crumb[] };
---

<nav class="mb-4 text-xs text-slate-400">
    {
        items.map((item, index) => (
            <>
                {index > 0 && <span class="mx-1 text-slate-600">/</span>}
                {item.href ? (
                    <a href={item.href} class="hover:text-sky-300">
                        {item.label}
                    </a>
                ) : (
                    <span class="text-slate-300 truncate block max-w-[150px] sm:max-w-none">
                        {item.label}
                    </span>
                )}
            </>
        ))
    }
</nav>
